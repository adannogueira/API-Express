version: "3.9"

services:
  db:
    image: postgres
    container_name: db
    restart: always
    ports: 
      - 5432:5432
    environment: 
      - POSTGRES_USER=DOCKER
      - POSTGRES_PASSWORD=DOCKER
      - POSTGRES_DB=rentx
    volumes: 
      - pgdata:/data/postgres
    expose: 
      - 5432
  app:
    build: .
    container_name: rentx
    volumes: 
      - ./src:/usr/app/src
      - ./nodemon.json:/home/usr/app/nodemon.json
    ports:
      - '3000:3000'
    depends_on: 
      - db

volumes: 
  pgdata:
    driver: local